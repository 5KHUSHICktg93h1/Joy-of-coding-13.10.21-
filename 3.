# Joy-of-coding-13.10.21-
#include <stdio.h>
#include<string.h>
int main()

{

    char fname[20], mname[20], lname[20]; 

     printf("Enter full String : \n");

     scanf("%s %s %s", fname, mname, lname);

     printf("Abbreviated name:\n");

     printf("%s. %c. %c\n", fname, mname[0], lname[0]);

     return 0;

}
